#!/usr/bin/env ruby
require "pathname"
require "fileutils"
include FileUtils

# path to your application root.
APP_ROOT = Pathname.new File.expand_path("..", __dir__)

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

chdir APP_ROOT do
  suffix =
      if ARGV[0] == 'local_production'
        ARGV[0]
      else
        'dev'
      end

  puts "== STARTING UP =="
  system! "foreman start -f Procfile.#{suffix}"
end
